{
  "name": "helloui",
  "version": "1.4.1",
  "description": "Electron app with React 19, TypeScript and Vite",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "chcp 65001 >nul 2>&1 & vite",
    "build": "vite build",
    "build:electron": "pnpm run build && electron-builder",
    "build:dir": "pnpm run build && electron-builder --dir",
    "typecheck": "tsc --project tsconfig.node.json --noEmit && tsc --noEmit",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"electron/**/*.ts\" \"shared/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"electron/**/*.ts\" \"shared/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/archiver": "^7.0.0",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "depcheck": "^1.4.7",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.72.11",
    "@fluentui/react-icons": "^2.0.318",
    "archiver": "^7.0.1",
    "execa": "^9.6.1",
    "react": "^19.2.4",
    "react-compare-slider": "^3.1.0",
    "react-dom": "^19.2.4",
    "react-photo-view": "^1.2.7",
    "react-router-dom": "^7.13.0",
    "zustand": "^5.0.11"
  },
  "build": {
    "appId": "com.helloui.app",
    "productName": "HelloUI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/main.js",
      "dist-electron/main.js.map",
      "dist-electron/preload.js",
      "dist-electron/preload.js.map"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "nodeGypRebuild": false,
    "npmRebuild": false
  }
}
