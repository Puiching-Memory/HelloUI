{
  "name": "helloui",
  "version": "1.2.6",
  "description": "Electron app with React 19, TypeScript and Vite",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.node.json && tsc && vite build",
    "build:electron": "pnpm run build && electron-builder",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "depcheck": "^1.4.7",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.72.9",
    "@fluentui/react-icons": "^2.0.316",
    "archiver": "^7.0.1",
    "execa": "^9.6.1",
    "react": "^19.2.3",
    "react-compare-slider": "^3.1.0",
    "react-dom": "^19.2.3",
    "react-photo-view": "^1.2.7"
  },
  "build": {
    "appId": "com.helloui.app",
    "productName": "HelloUI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "worker.html"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "nodeGypRebuild": false,
    "npmRebuild": false
  }
}
